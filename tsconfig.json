{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "moduleResolution": "node",
        "jsx": "react",
        "outDir": "artifacts",
        "noEmit": true,
        "allowSyntheticDefaultImports": true,
        "preserveConstEnums": true,
        "allowJs": true,
        "checkJs": false,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "importHelpers": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "rootDir": ".",
        "paths": {
            "@src/*": ["src/*"]
        }
    },
    "filesGlob": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["dist", "node_modules", "index.js"],
    "compileOnSave": false
}
